<%= form_with(model: semaphore, local: true) do |f| %>

    <div class="form-group">
     <h2> <%= f.label :state_id, "Estado: "%>      <%= @semaphore.state.estado.capitalize %> </h2>
      <% if params[:estado].present? %>
      <%= f.select :state_id, options_for_select(State.all.pluck(:estado, :id), semaphore.state_id), {include_blank: true}, {class: "form-control hidden", required: true}%>
      
      <% else %>
 
      <% end %>
     
    </div>
     
    <div class="form-group">
      <%= f.label :color, "Color del semÃ¡foro*" %>
      <%= f.select :color, options_for_select(Semaphore.colors.map{|s| [s.first.capitalize, s.first]}, semaphore.color), {include_blank: true}, {class: "form-control", required: true} %>
    </div>
    <div class="form-group">
      <%= f.label :start, "Fecha de inicio*" %>
      <%= f.date_field :fecha_ini, class: "form-control", required: true %>
    </div>
   
    <%= f.submit "Actualizar Color" ,class: "btn btn-primary mt-3"%>
  <% end %>

